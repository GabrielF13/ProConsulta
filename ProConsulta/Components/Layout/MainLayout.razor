@inherits LayoutComponentBase

<MudThemingProvider IsDarkMode="_isDark" />
<MudPopoverProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
		<MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h5" Class="ml-3">Pro Queries</MudText>
        <MudSpacer />
        <MudStack row>
            <MudIconButton Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" Edge="Edge.End" />

            @if (_isDark)
            {
                <MudIconButton @onclick="ThemeToggle" Icon="@Icons.Filled.WbSunny" Color="@Color.Inherit" />
            }else
            {
                <MudIconButton @onclick="ThemeToggle" Icon="@Icons.Filled.DarkMode" Color="@Color.Inherit" />
            }

        </MudStack>
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenu />
    </MudDrawer>
    <MudMainContent Class="mt-16 pa-4">
        @Body
    </MudMainContent>
</MudLayout>

@code {
    private bool _drawerOpen = true;
    private bool _isDark = true;

    private void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

    private void ThemeToggle()
    {
        _isDark = !_isDark;
    }
}